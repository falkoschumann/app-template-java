<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root fx:id="stage" title="Hello World" type="Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.acme.helloworld.frontend.HelloWorldController">
   <scene>
      <Scene stylesheets="@style.css">
         <root>
            <VBox>
               <children>
                  <MenuBar fx:id="menuBar">
                    <menus>
                      <Menu mnemonicParsing="false" text="File">
                        <items>
                          <MenuItem mnemonicParsing="false" onAction="#handleClose" text="Close">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="Q" control="UP" meta="DOWN" shift="UP" shortcut="UP" />
                                 </accelerator>
                              </MenuItem>
                        </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                        <items>
                          <MenuItem mnemonicParsing="false" onAction="#handleShowAbout" text="About" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
                  <VBox spacing="16.0">
                     <children>
                       <Label fx:id="greeting" styleClass="title" text="Hello ..." />
                        <HBox spacing="8.0">
                           <children>
                              <TextField fx:id="name" onAction="#handleCreateUser" promptText="Name" />
                              <Button mnemonicParsing="false" onAction="#handleCreateUser" text="Create user" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </root>
      </Scene>
   </scene>
</fx:root>
